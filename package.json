{
  "name": "nextjs-ts-playground",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "vitest --config vitest.config.ts",
    "test:ci": "vitest run --config vitest.config.ts --reporter=dot",
    "test:storybook": "vitest run",
    "test:basic": "vitest run --config vitest.config.ts src/tests/basic.test.tsx",
    "test:smoke": "vitest run --config vitest.config.ts src/tests/smoke.test.tsx",
    "test:simple": "vitest run --config simple.vitest.config.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "ci": "pnpm lint && pnpm typecheck && pnpm test:simple",
    "test:unit": "vitest run --config vitest.config.ts",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/eslintrc": "^3",
    "@mdx-js/react": "^3.1.1",
    "@storybook/addon-a11y": "^9.1.6",
    "@storybook/addon-docs": "^9.1.6",
    "@storybook/addon-vitest": "^9.1.6",
    "@storybook/builder-webpack5": "^9.1.6",
    "@storybook/nextjs": "^9.1.6",
    "@storybook/nextjs-vite": "^9.1.6",
    "@storybook/react": "^9.1.6",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.3",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-storybook": "^9.1.6",
    "eslint-plugin-testing-library": "^7.8.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "markdown-to-jsx": "^7.7.13",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^10.3.1",
    "prettier": "^3.6.2",
    "storybook": "^9.1.6",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
